<div class="row">
	<div class="col-md-3">
	</div>

	<div class="col-md-6">
		<%= form_for @message do |f| %>

		<div class="form-group">
			<%= f.select :user_tokens, @users.collect {|x| [x.username, x.id]}, {}, {multiple: true} %>
		</div>
		<div class="form-group">
			<%= f.text_area :body, rows: "6", class: "form-control" %>
		</div>

		

		<div class="form-group">
			<%= f.submit "Sent", class: "btn btn-primary btn-block" %>
		</div>
		<% end %>
	</div>

</div>




<script type="text/javascript">
    $(document).ready(function() {
        $('#message_user_tokens').multiselect({
            buttonClass: 'btn btn-secondary',
            buttonWidth: '100%'
        });
    });
</script>